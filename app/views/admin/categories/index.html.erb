<% provide :title, t("category_page.categories") %>

<div class="row">
	<h1>Categories</h1>

	<div class="col-md-4">
    <div>
      <%= form_for [:admin, @category], remote: true, class: "form form-inline" do |f| %>
        <%#= render "shared/error_messages", object: f.object %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <%= f.submit "Create category", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

	<div class="col-md-8">
	  <table class="table table-hover table-bordered">
	    <tbody>
	      <tr>
	        <th>Name</th>
	        <th>Description</th>
	        <th>Action</th>
	      </tr>
	      <%= render @categories %>
	    </tbody>
	  </table>
	  <%= will_paginate @categories %>
	</div>

</div>
